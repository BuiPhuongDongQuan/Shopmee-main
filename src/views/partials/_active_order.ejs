<tr>
    <td class="py-2 px-4 border-b border-gray-300 text-center"><%= order.id %></td>
    <td class="py-2 px-4 whitespace-nowrap border-b border-gray-300 text-center"><%= order.userFullName %></td>
    <td class="py-2 px-4 whitespace-nowrap border-b border-gray-300 text-center"><%= order.userAddress %></td>
    <td class="py-2 px-4 whitespace-nowrap border-b border-gray-300 text-center">
        <% let total = 0 %>
        <% order.products.forEach(item => { %>
            <% total += item.product.price * item.quantity %>
        <% }) %>
        $<%= total %>
    </td>
    <td  class="py-2 px-4 border-b border-gray-300 text-center"><span data-status="<%= order.status %>" class="status bg-opacity-50 rounded-lg px-3 py-[2px] uppercase font-semibold text-sm"><%= order.status %></span></td>
    <td class="py-2 px-4 border-b border-gray-300 text-center">
        <button class="py-1 px-3 bg-violet-500 text-white rounded-md whitespace-nowrap hover:bg-violet-600"><a href="<%= "/users/shipper/active-order/" + order.id %>">View details</a></button>
    </td>
</tr>
